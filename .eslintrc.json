{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "./node_modules/standard/eslintrc.json"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "space-before-function-paren":"off",
    "react/prop-types": "off",
    "camelcase": [
      "error",
      {
        "properties": "never"
      }
    ],
    "indent": ["error", 2, { "SwitchCase": 1 }, { "flatTernaryExpressions": true }],
    "spaced-comment": 0
  },
  "settings": {
    "react": {
      "version": "17.0"
    }
  }
}